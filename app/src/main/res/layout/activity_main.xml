<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:background="#999"
    tools:context="br.com.novo.prpjetocalculadora.MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="70dp"
       android:id="@+id/scren_layout"
       android:layout_alignLeft="@+id/container_keyboard"
       android:layout_alignRight="@+id/container_keyboard"
       android:clickable="true"
       android:background="?attr/selectableItemBackgroundBorderless">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/txt_screen"
           tools:text="9+5"
           android:gravity="center_vertical|right"
           android:paddingRight="10dp"
           android:textSize="40sp"
           android:background="#FFFF"/>
   </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:id="@+id/container_keyboard"
        android:layout_centerHorizontal="true"
        android:rowCount="4"
        android:columnCount="4">



        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_n1"
            android:tag="1"
            android:text="1"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_n2"
            android:text="2"
            android:tag="2"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_n3"
            android:tag="3"
            android:text="3"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_soma"
            android:tag="+"
            android:text="+"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_n4"
            android:tag="4"
            android:text="4"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_n5"
            android:tag="5"
            android:text="5"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_n6"
            android:tag="6"
            android:text="6"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_subt"
            android:tag="-"
            android:text="-"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_n7"
            android:tag="7"
            android:text="7"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_n8"
            android:tag="8"
            android:text="8"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_n9"
            android:tag="9"
            android:text="9"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_mult"
            android:tag="x"
            android:text="x"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_n0"
            android:tag="0"
            android:text="0"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_dot"
            android:tag="."
            android:text="."
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_equal"
            android:tag="="
            android:text="="
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_div"
            android:tag="/"
            android:text="/"
            android:textSize="20dp"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_ce"
            android:tag="ce"
            android:text="ce"
            android:textSize="20dp"/>





    </GridLayout>



</RelativeLayout>
